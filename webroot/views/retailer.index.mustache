                    <span class="col col-md-2 form-control bg-warning align-items-center">Verified: NO</span>
                {{/is_verified}}
            
                {{#is_suspended}}
                    <span class="col col-md-2 form-control bg-danger text-white align-items-center">Suspended: YES</span>
                {{/is_suspended}}
            
                {{^is_suspended}}
                    <span class="col col-md-2 align-items-center">Suspended: No</span>
                {{/is_suspended}}
                
                </div>
            
                {{^is_suspended}}
                    <div class="form-row">
                {{/is_suspended}}
                
                {{#is_suspended}}
                    <div class="form-row form-control is-invalid">
                {{/is_suspended}}
                
