            <!-- Page Content -->
            <div class="container">

            <div class="form-row bg-secondary text-white">
                <div class="col-md-6">Retailer List</div>
                <div class="col-md-6 ">
                    <a class="page-link bg-secondary text-white float-right" href="/retailer/add/{{country_id}}">Add A Retailer</a>
                </div>
            </div>

            <!-- Retailers -->
            {{#retailers}}
      
                {{^is_suspended}}
                    <div class="form-row">
                {{/is_suspended}}
        
                {{#is_suspended}}
                    <div class="form-row form-control is-invalid">
                {{/is_suspended}}
        
                <a class="page-link col-md-6" href="/retailer/detail/{{country_id}}/{{id}}">{{name}} ({{id}})</a>
