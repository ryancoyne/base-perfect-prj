<div class="col thirteen last push_three">

    <h2>Forgot Password</h2>

    {{#msg_body}}
    <div class="error pt pb">
        <h3>{{msg_title}}</h3>
        {{{msg_body}}}
    </div>
    {{/msg_body}}

    <form action="/forgotpasswordEntered" method="POST">

        <fieldset>
            <label class="above" for="email">Email</label>
            <input type="text" id="email" name="email" placeholder="Email" />
        </fieldset>

        <input type="hidden" name="_csrf" value="{{csrfToken}}">
        <button type="submit" class="dmt">Send Verification Email</button>
        <a href="/" class="button">Cancel</a>

</form>

</div>

